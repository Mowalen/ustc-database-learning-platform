# 数据库配置
# SQLite (默认)
DATABASE_URL=sqlite+aiosqlite:///./sql_app.db

# MySQL (可选)
# DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/dbname

# 安全配置
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 邮箱 / SMTP 配置
# 开发模式：设置为 True 时不实际发送邮件，直接返回验证码
DEV_MODE=True

# 生产环境邮件配置（当 DEV_MODE=False 时需要配置）
# Gmail 示例:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password  # Gmail需要使用应用专用密码，不是邮箱登录密码
FROM_EMAIL=your-email@gmail.com
FROM_NAME=USTC数据库学习平台

# QQ邮箱示例:
# SMTP_HOST=smtp.qq.com
# SMTP_PORT=587
# SMTP_USE_TLS=True
# SMTP_USER=your-qq-email@qq.com
# SMTP_PASSWORD=your-authorization-code  # QQ邮箱授权码
# FROM_EMAIL=your-qq-email@qq.com
# FROM_NAME=USTC数据库学习平台

# 163邮箱示例:
# SMTP_HOST=smtp.163.com
# SMTP_PORT=465
# SMTP_USE_TLS=False  # 163使用SSL，不是TLS
# SMTP_USER=your-163-email@163.com
# SMTP_PASSWORD=your-authorization-code  # 163邮箱授权码
# FROM_EMAIL=your-163-email@163.com
# FROM_NAME=USTC数据库学习平台
